// Online Java Compiler
// Use this editor to write, compile and run your Java code online
// Ejemplo 1
import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        System.out.print("Escribe una palabra: ");
        String texto = teclado.nextLine();
       
        if (texto.equals("hola")) {
            System.out.println("Hola Mundo");
        } else  {
            System.out.println("Se merece un 5.0 por ser la mejor secretaria");
        }
    }
}


// Online Java Compiler
// Use this editor to write, compile and run your Java code online
// Ejemplo 2
import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        System.out.print("Escribe un numero: ");
        int x;
       
     do {
         x = teclado.nextInt();
        if(x > 0){
            System.out.print("Numero positivo");
     }
     else{
         System.out.print("Fin del programa");
     }
     }while (x >=0);
}
}


// Online Java Compiler
// Use this editor to write, compile and run your Java code online
// Ejemplo 3
import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        System.out.print("Escribe un numero: ");
        int x = teclado.nextInt();
        if(x >0){
            System.out.print("El numero es positivo:");
        }
       
        while (x >=0) {
            x= teclado.nextInt();
             if(x >=0){
                 System.out.println("Numero positivo");
                 
             }
         else  {
             System.out.println("Numero negativo");
           
        }
        }while (x >=0);
     
    }
}


// Online Java Compiler
// Use this editor to write, compile and run your Java code online
// Ejemplo 4
import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
       
        Scanner teclado = new Scanner(System.in);
       
        int x;
        do{
            System.out.print("Escribe un numero: ");
             x = teclado.nextInt();
              if(x >=0){
            System.out.println("El numero es positivo, intentelo de nuevo");
        }
       
        else {
                 System.out.println("Fin del programa");
            }
        }while (x >=0);    
       
    }
}


// Online Java Compiler
// Use this editor to write, compile and run your Java code online
// Ejemplo 5
import java.util.Scanner;

class HelloWorld {
    public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        System.out.println("Escribe el # de veces que se repite: ");
        int numero = teclado.nextInt();
        for (int i = 1; i <= numero; i++){
            System.out.println(i);
        }
        
    }
    
}
